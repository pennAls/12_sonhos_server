generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cargo {
  cargo_id   Int       @id @default(autoincrement())
  cargo_nome String
  usuarios   Usuario[]

  @@map("cargo")
}

model Usuario {
  usuario_id      Int      @id @default(autoincrement())
  usuario_nome    String
  usuario_cpf     String   @unique
  usuario_email   String   @unique
  usuario_senha   String // Senha obrigatória para usuários do sistema
  data_nascimento DateTime @db.Date
  usuario_cep     String
  tem_carro       Boolean
  cargo_id        Int
  cargo           Cargo    @relation(fields: [cargo_id], references: [cargo_id])

  @@map("usuario")
}

model Doador {
  doador_id       Int      @id @default(autoincrement())
  doador_nome     String
  doador_cpf      String   @unique
  doador_email    String   @unique
  data_nascimento DateTime @db.Date
  doador_cep      String
  tem_carro       Boolean
  doacoes         Doacao[]

  @@map("doador")
}

model Doacao {
  doacao_id    Int      @id @default(autoincrement())
  data_doacao  DateTime @db.Date
  valor_doacao Float?
  observacao   String?
  doador_id    Int
  doador       Doador   @relation(fields: [doador_id], references: [doador_id])

  @@map("doacao")
}
