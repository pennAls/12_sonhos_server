generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cargo {
  cargo_id   Int       @id @default(autoincrement())
  cargo_nome String
  usuarios   Usuario[]

  @@map("cargo")
}

model Usuario {
  usuario_id      Int      @id @default(autoincrement())
  usuario_nome    String
  usuario_cpf     String   @unique
  usuario_email   String   @unique
  usuario_senha   String
  data_nascimento DateTime @db.Date
  usuario_cep     String

  tem_carro Boolean

  cargo_id Int
  cargo    Cargo @relation(fields: [cargo_id], references: [cargo_id])

  doacoes Doacao[]

  @@map("usuario")
}

model Doacao {
  doacao_id    Int      @id @default(autoincrement())
  data_doacao  DateTime @db.Date
  valor_doacao Float?
  observacao   String?

  usuario_id Int
  usuario    Usuario @relation(fields: [usuario_id], references: [usuario_id])

  @@map("doacao")
}
